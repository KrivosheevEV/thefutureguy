<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.kev163rus.thefutureguy.BeforeTestActivity"
    android:background="@color/color1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutDialog"
        android:weightSum="100"
        android:background="@drawable/background1"
        android:layout_margin="30dp">

        <EditText
            android:id="@+id/editTextUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/editTextUserNameHint"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/textViewDialogBeforeVotingText"
            android:id="@+id/textViewDialogBeforeVotingText"
            android:layout_weight="70"
            android:textSize="20sp"
            android:padding="15dp"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35"
            android:weightSum="100">

            <TextView
                android:id="@+id/textViewDialogBeforeVotingYes"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:layout_weight="70"
                android:gravity="center"
                android:text="@string/textViewDialogBeforeVotingYes"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDialogBeforeVotingNo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_weight="30"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/textViewDialogBeforeTestNo"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
